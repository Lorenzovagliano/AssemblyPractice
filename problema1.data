.data
vetor: .word 1 2 3 4

##### START MODIFIQUE AQUI START #####
#
# Este espaço é para você definir as suas constantes e vetores auxiliares.
#
##### END MODIFIQUE AQUI END #####

.text
jal x1, contador
addi x14, x0, 2 # utilizado para correção
beq x14, x5, FIM # Verifica # de pares
beq x14, x6, FIM # Verifica # de ímpares

##### START MODIFIQUE AQUI START #####
contador:
        # Initialize counters for even numbers (x10) and odd numbers (x11)
        li x10, 0       # Initialize x10 with 0 to count even numbers
        li x11, 0       # Initialize x11 with 0 to count odd numbers

        # Initialize the address of the array "vetor" in t2
        la t2, vetor

        # Initialize the size of the array "vetor" in t3 (assuming it has 8 elements)
        li t3, 4

        # Loop to iterate through the array
        loop:
            lw t0, 0(t2)     # Load the current element from the array into t0
            andi t1, t0, 1   # Check if the element is even (t0 & 1)
            beqz t1, par     # If the result is zero (element is even), go to the "par" label

            # If the element is odd, increment the odd number counter (x11)
            addi x11, x11, 1
            j next_iteration

        par:
            # If the element is even, increment the even number counter (x10)
            addi x10, x10, 1

        next_iteration:
            addi t2, t2, 4   # Move to the next element in the array (4 bytes)
            addi t3, t3, -1  # Decrement the remaining size of the array
            bnez t3, loop    # If there are still elements in the array, continue the loop

        # Return to the calling function
        ret
##### END MODIFIQUE AQUI END #####

FIM: addi x0, x0, 1
